{
    // Change this to match your project
    "include": ["src/**/*.js"],
    "exclude": ["node_modules/**"],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        // Tells TypeScript to read JS files, as
        // normally they are ignored as source files
        "allowJs": true,
        // Generate d.ts files
        "declaration": true,
        "emitDeclarationOnly": true,
        "outFile": "dist/index.d.ts",
        "declarationDir": null,
    },
    "typeRoots": [
        "../../node_modules",
        "../../node_modules/@types",
        "../definitions"
    ]
}
